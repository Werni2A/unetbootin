#!/bin/bash

rvern="$(./vcs-revno)"
make clean
rm Makefile*
rm release/*
lupdate unetbootin.pro
lrelease unetbootin.pro
./qmake-windows "DEFINES += EEEUBUNTU" "RESOURCES += unetbootin-eeeubuntu.qrc"
make
strip --strip-all release/unetbootin.exe
mv release/unetbootin.exe release/unetbootin-eeeubuntu-windows-$rvern.exe
upx-ucl --lzma release/unetbootin-eeeubuntu-windows-$rvern.exe
./qmake-linux "DEFINES += EEEUBUNTU" "RESOURCES += unetbootin-eeeubuntu.qrc"
make
strip --strip-all unetbootin
mv unetbootin release/unetbootin-eeeubuntu-linux-$rvern
upx-ucl --lzma release/unetbootin-eeeubuntu-linux-$rvern
qmake -spec linux-g++-32 "RESOURCES += unetbootin-linux.qrc"

